{
    "name": "Myanmar Translate",
    "manifest_version": 2,
    "version": "1.0.3",
    "description": "Automatically translate selection/mouseover text by Ornagai translate",
    "background": {
        "scripts": ["translate.html", "translate.js", "inject.js"],
        "persistent": false
     },
    "options_page": "options.html",
    "permissions": [
        "tabs",
        "http://*.ornagai.com/*",
        "http://ajax.googleapis.com/*",
        "http://*.google.com/*",
        "http://google.com/*",
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "64": "icons/64.png",
        "128": "icons/128.png",
        "256": "icons/translation.png"
    }
}
